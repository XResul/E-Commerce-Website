@model IEnumerable<haliEntityLayer.Entity.Slider>

<section id="billboard" class="overflow-hidden">

    <button class="button-prev">
        <i class="icon icon-chevron-left"></i>
    </button>
    <button class="button-next">
        <i class="icon icon-chevron-right"></i>
    </button>
    <div class="swiper main-swiper">
        <div class="swiper-wrapper">

            @foreach (var item in Model)
            {


                <div class="swiper-slide" style="background-image: url('@item.ImageURL');background-repeat: no-repeat;background-size: cover;background-position: center;">
                    <div class="banner-content">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6">
                                    <h2 class="banner-title">@item.SliderTitle</h2>
                                    <p>@item.MetaDescription</p>
                                    <div class="btn-wrap">

                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }






 





        </div>
    </div>
</section>
