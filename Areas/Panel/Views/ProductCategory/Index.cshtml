@model IEnumerable<haliEntityLayer.Entity.ProductCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}

<h2>Ürün Kategori Sayfası</h2>

<p>
    <a href="~/Panel/ProductCategory/Create" class="btn btn-primary"><i class="fa fa-plus"></i> Yeni</a>
</p>
<table class="table">
    <tr>
        <th>
            Resim
        </th>
        <th>
            Kategori İsim
        </th>

   
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@item.ImageURL" style="max-width:70%;" />

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductCategoryName)
        </td>


        <td>
            @if (item.IsActive==true)
            {
                <div class="aktif"></div>
            }
            else
            {
                <div class="pasif"></div>
            }

        </td>
        <td>
            <a href="~/Panel/ProductCategory/Edit/@item.ProductCategoryID" class="btn btn-warning"><i class="fa fa-pencil"></i> </a>
            <a href="~/Panel/ProductCategory/Detail/@item.ProductCategoryID" class="btn btn-info"><i class="fa fa-info"></i> </a>

        </td>
        <td>

            <a href="~/Panel/ProductCategory/pasifYap/@item.ProductCategoryID" class="btn btn-danger"> Pasif</a>

            <a href="~/Panel/ProductCategory/aktifYap/@item.ProductCategoryID" class="btn btn-success"> Aktif</a>
        </td>
    </tr>
}

</table>
