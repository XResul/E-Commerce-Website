@model IEnumerable<haliEntityLayer.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}

<h2>Ürünler</h2>

<p>
    <a href="~/Panel/Product/Create" class="btn btn-primary"><i class="fa fa-plus"></i> Yeni</a>
</p>
<table class="table">
    <tr>

        <th>
            Resim
        </th>


        <th>
            Ürün İsmi
        </th>
        <th>
            Fiyat
        </th>

        <th>
            Kategori Adı 
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            <img src="@item.ImageURL" style="max-width:20%;" />

        </td>

        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductCategory.ProductCategoryName)
        </td>

        <td>
            <a href="~/Panel/Product/Edit/@item.ProductID" class="btn btn-warning"><i class="fa fa-pencil"></i> </a>

            <a href="~/Panel/Product/Detail/@item.ProductID" class="btn btn-info"><i class="fa fa-info"></i> </a>



            <a href="~/Panel/Product/Delete/@item.ProductID" class="btn btn-danger"><i class="fa fa-trash"></i> </a>


        </td>
    </tr>
}

</table>
