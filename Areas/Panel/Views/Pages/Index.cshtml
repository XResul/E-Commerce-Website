@model IEnumerable<haliEntityLayer.Entity.Page>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}

<h2>Sayfalar</h2>

<p>
    <a href="~/Panel/Pages/Create" class="btn btn-primary"><i class="fa fa-plus"></i> Yeni</a>

</p>
<table class="table">
    <tr>

        <th>
            Resim
        </th>


        <th>
            Sayfa Adı
        </th>
        <th>
            Başlık
        </th>

        <th>
            Durum
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                <img src="@item.ImageURL" style="max-width:70%;" />
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.PageName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PageTitle)
            </td>


            <td>
                @if (item.IsActive == true)
                {
                    <div class="aktif"></div>
                }
                else
                {
                    <div class="pasif"></div>
                }
            </td>

            <td>
                <a href="~/Panel/Pages/Edit/@item.PageID" class="btn btn-warning"><i class="fa fa-pencil"></i> </a>
                <a href="~/Panel/Pages/Detail/@item.PageID" class="btn btn-info"><i class="fa fa-info"></i> </a>

            </td>
            <td>

                <a href="~/Panel/Pages/pasifYap/@item.PageID" class="btn btn-danger"> Pasif</a>

                <a href="~/Panel/Pages/aktifYap/@item.PageID" class="btn btn-success"> Aktif</a>
            </td>
        </tr>
    }

</table>
