@model IEnumerable<haliEntityLayer.Entity.myAbout>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}

<h2>My Abouts Sayfası</h2>

<p>
    <a href="~/Panel/myAbout/Create" class="btn btn-primary"><i class="fa fa-plus"></i> Yeni</a>

</p>
<table class="table">
    <tr>
        <th>
            Resim
        </th>
        <th>
            Başlık
        </th>

   
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>

            <img src="@item.ImageUrl" style="max-width:50%;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>



        <td>
            <a href="~/Panel/myAbout/Edit/@item.Id" class="btn btn-warning"><i class="fa fa-pencil"></i> </a>
            <br />
            <br />
            <a href="~/Panel/myAbout/Detail/@item.Id" class="btn btn-info"><i class="fa fa-info"></i> </a>
            <br />
            <br />

            <a href="~/Panel/myAbout/Delete/@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i> </a>
        </td>
    </tr>
}

</table>
