@model haliEntityLayer.Entity.myAbout

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}

<h2>Detaylar</h2>

<div>

    <hr />
    <dl class="dl-horizontal">

        <dt>
            Resim
        </dt>

        <dd>
            <img src="@Model.ImageUrl" style="max-width:50%;"/>
            <hr />
        </dd>


        <dt>
            Başlık
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
            <hr />
        </dd>


        <dt>
            Meta Açıklama
        </dt>

        <dd>
            @Html.Raw(Model.MetaDescription)
            <hr />
        </dd>

        <dt>
            Açıklama
        </dt>

        <dd>
            @Html.Raw(Model.Description)
            <hr />
        </dd>

    </dl>
</div>
<p>
    <a href="~/Panel/myAbout/Edit/@Model.Id" class="btn btn-warning"><i class="fa fa-pencil"></i> Düzenle</a>

</p>
<hr />
<p>
    <a href="~/Panel/myAbout/index" class="btn btn-default"><i class="fa fa-sign-out"></i> Listeye Dön</a>

</p>